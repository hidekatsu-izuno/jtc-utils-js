{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "target": "ES2022",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./types/",
    "newLine": "LF"
  },
  "include": [
    "./src/**/*",
  ]
}
