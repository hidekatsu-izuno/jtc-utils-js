{
  "name": "jtc-utils",
  "version": "0.0.1",
  "description": "Utilities for Japanese Traditional Companies",
  "type": "module",
  "scripts": {
    "build": "tsc --build --clean && tsc -p ./tsconfig.json && tsc -p ./tsconfig.cjs.json",
    "test": "vitest --config vite.config.ts",
    "lint": "eslint",
    "generate:isSafeWindows31J": "ts-node --esm ./scripts/generate_isSafeWindows31J.ts",
    "generate:toHalfwidth": "ts-node --esm ./scripts/generate_toHalfwidth.ts",
    "generate:toFullwidth": "ts-node --esm ./scripts/generate_toFullwidth.ts",
    "generate:toZenginKana": "ts-node --esm ./scripts/generate_toZenginKana.ts"
  },
  "author": "Hidekatsu Izuno <hidekatsu.izuno@gmail.com> (https://github.com/hidekatsu-izuno/)",
  "license": "MIT",
  "exports": {
    ".": {
      "import": {
        "types": "./module/index.d.ts",
        "default": "./module/index.js"
      },
      "require": {
        "types": "./lib/index.d.ts",
        "default": "./lib/index.js"
      },
      "default": "./lib/index.js"
    },
    "./package.json": "./package.json"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.38.0",
    "typescript": "^5.0.4",
    "vitest": "^0.30.0",
    "papaparse": "^5.4.1",
    "@types/papaparse": "^5.3.7"
  },
  "dependencies": {
    "date-fns": "^2.29.3",
    "date-fns-tz": "^2.0.0"
  }
}
