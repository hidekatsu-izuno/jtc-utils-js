{
  "name": "jtc-utils",
  "version": "0.2.0-alpha.0",
  "description": "Utilities for Japanese Traditional Companies",
  "type": "module",
  "scripts": {
    "build": "tsc --build --clean && tsc -p ./tsconfig.json && tsc -p ./tsconfig.cjs.json",
    "test": "vitest --config vitest.config.ts",
    "lint": "eslint",
    "generate": "npm-run-all 'generate:*'",
    "generate:isWindows31J": "ts-node --esm ./scripts/generate_isWindows31J.ts",
    "generate:normalize": "ts-node --esm ./scripts/generate_normalize.ts",
    "generate:toHalfwidth": "ts-node --esm ./scripts/generate_toHalfwidth.ts",
    "generate:toFullwidth": "ts-node --esm ./scripts/generate_toFullwidth.ts",
    "generate:toHiragana": "ts-node --esm ./scripts/generate_toHiragana.ts",
    "generate:toKatakana": "ts-node --esm ./scripts/generate_toKatakana.ts",
    "generate:toZenginKana": "ts-node --esm ./scripts/generate_toZenginKana.ts",
    "version.major": "npm run build && standard-version --release-as major",
    "version.major.alpha": "npm run build && standard-version --release-as major --prerelease alpha",
    "version.minor": "npm run build && standard-version --release-as minor",
    "version.minor.alpha": "npm run build && standard-version --release-as minor --prerelease alpha",
    "version.patch": "npm run build && standard-version --release-as patch",
    "release": "git push --follow-tags origin main && npm publish",
    "release.alpha": "git push --follow-tags origin main && npm publish --tag alpha"
  },
  "author": "Hidekatsu Izuno <hidekatsu.izuno@gmail.com> (https://github.com/hidekatsu-izuno/)",
  "license": "MIT",
  "exports": {
    ".": {
      "import": {
        "types": "./module/index.d.ts",
        "default": "./module/index.js"
      },
      "require": {
        "types": "./lib/index.d.ts",
        "default": "./lib/index.js"
      },
      "default": "./lib/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "lib/",
    "module/",
    "src/",
    "LICENSE",
    "package.json",
    "README.md"
  ],
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.2",
    "@types/papaparse": "^5.3.7",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.38.0",
    "standard-version": "^9.5.0",
    "typescript": "^5.0.4",
    "vitest": "^0.30.0"
  },
  "dependencies": {
    "date-fns": "^2.29.3",
    "date-fns-tz": "^2.0.0"
  }
}
