{
  "name": "jtc-utils",
  "version": "0.3.0",
  "description": "Utilities for Japanese Traditional Companies",
  "type": "module",
  "main": "./module/index.js",
  "types": "./module/index.d.ts",
  "scripts": {
    "build": "tsc --build --clean && tsc -p ./tsconfig.json && tsc -p ./tsconfig.cjs.json",
    "test": "vitest --config vitest.config.ts",
    "lint": "eslint",
    "generate:IBMKanjiDecodeMap": "tsx ./scripts/generate_IBMKanjiDecodeMap.ts",
    "generate:toFullwidth": "tsx ./scripts/generate_toFullwidth.ts",
    "generate:toFullwidthKatakana": "tsx ./scripts/generate_toFullwidthKatakana.ts",
    "generate:toHalfwidth": "tsx ./scripts/generate_toHalfwidth.ts",
    "generate:toHiragana": "tsx ./scripts/generate_toHiragana.ts",
    "generate:toZenginKana": "tsx ./scripts/generate_toZenginKana.ts"
  },
  "author": "Hidekatsu Izuno <hidekatsu.izuno@gmail.com> (https://github.com/hidekatsu-izuno/)",
  "license": "MIT",
  "sideEffects": false,
  "engines": {
    "node": ">=16"
  },
  "exports": {
    "./locale": {
      "require": {
        "types": "./commonjs/locale/index.d.ts",
        "default": "./commonjs/locale/index.js"
      },
      "default": {
        "types": "./module/locale/index.d.ts",
        "default": "./module/locale/index.js"
      }
    },
    "./charset": {
      "require": {
        "types": "./commonjs/charset/index.d.ts",
        "default": "./commonjs/charset/index.js"
      },
      "default": {
        "types": "./module/charset/index.d.ts",
        "default": "./module/charset/index.js"
      }
    },
    ".": {
      "require": {
        "types": "./commonjs/index.d.ts",
        "default": "./commonjs/index.js"
      },
      "default": {
        "types": "./module/index.d.ts",
        "default": "./module/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "typesVersions": {
    "*": {
      "charset": ["./module/charset/index.d.ts"],
      "locale": ["./module/locale/index.d.ts"],
      "*": ["./module/index.d.ts"]
    }
  },
  "files": [
    "commonjs/",
    "module/",
    "src/",
    "LICENSE",
    "package.json",
    "README.md"
  ],
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "release-please": "^15.12.0",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6",
    "vitest": "^0.33.0"
  },
  "dependencies": {
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0"
  }
}
