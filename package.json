{
  "name": "jtc-utils",
  "version": "0.3.0-alpha.1",
  "description": "Utilities for Japanese Traditional Companies",
  "main": "./commonjs/index.js",
  "types": "./commonjs/index.d.ts",
  "scripts": {
    "build": "tsc --build --clean && tsc -p ./tsconfig.json && tsc -p ./tsconfig.cjs.json",
    "test": "vitest --config vitest.config.ts",
    "lint": "eslint",
    "generate:IBMKanjiDecodeMap": "node --loader ts-node/module ./scripts/generate_IBMKanjiDecodeMap.ts",
    "generate:toFullwidth": "node --loader ts-node/module ./scripts/generate_toFullwidth.ts",
    "generate:toFullwidthKatakana": "node --loader ts-node/module ./scripts/generate_toFullwidthKatakana.ts",
    "generate:toHalfwidth": "node --loader ts-node/module ./scripts/generate_toHalfwidth.ts",
    "generate:toHiragana": "node --loader ts-node/module ./scripts/generate_toHiragana.ts",
    "generate:toZenginKana": "node --loader ts-node/module ./scripts/generate_toZenginKana.ts"
  },
  "author": "Hidekatsu Izuno <hidekatsu.izuno@gmail.com> (https://github.com/hidekatsu-izuno/)",
  "license": "MIT",
  "sideEffects": false,
  "engines": {
    "node": ">=16"
  },
  "exports": {
    "./locale": {
      "import": {
        "types": "./module/locale/index.d.ts",
        "default": "./module/locale/index.js"
      },
      "default": {
        "types": "./commonjs/locale/index.d.ts",
        "default": "./commonjs/locale/index.js"
      }
    },
    "./charset": {
      "import": {
        "types": "./module/charset/index.d.ts",
        "default": "./module/charset/index.js"
      },
      "default": {
        "types": "./commonjs/charset/index.d.ts",
        "default": "./commonjs/charset/index.js"
      }
    },
    ".": {
      "import": {
        "types": "./module/index.d.ts",
        "default": "./module/index.js"
      },
      "default": {
        "types": "./commonjs/index.d.ts",
        "default": "./commonjs/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "files": [
    "commonjs/",
    "module/",
    "src/",
    "LICENSE",
    "package.json",
    "README.md"
  ],
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "eslint": "^8.43.0",
    "release-please": "^15.11.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.5",
    "vitest": "^0.32.2"
  },
  "dependencies": {
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0"
  }
}
