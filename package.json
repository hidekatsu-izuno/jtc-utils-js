{
  "name": "jtc-utils",
  "version": "0.3.0",
  "description": "Utilities for Japanese Traditional Companies",
  "author": "Hidekatsu Izuno <hidekatsu.izuno@gmail.com> (https://github.com/hidekatsu-izuno/)",
  "license": "MIT",
  "keywords": [
    "jtc",
    "legacy",
    "halfwidth",
    "fullwidth",
    "hiragana",
    "katakana",
    "windows-31j",
    "euc-jp",
    "cp930",
    "cp939",
    "csv",
    "fixlen"
  ],
  "scripts": {
    "build": "npm run build:types && npm run build:module && npm run build:cjs && tsx ./scripts/normalize_sourcemap.ts",
    "build:types": "tsc --build --clean && tsc -p ./tsconfig.json",
    "build:module": "babel src --config-file ./babel.config.json --out-dir lib --extensions .ts",
    "build:cjs": "babel src --config-file ./babel.config.cjs.json --out-dir cjs --extensions .ts --out-file-extension .cjs",
    "test": "vitest --config vitest.config.ts",
    "lint": "eslint",
    "generate:IBMKanjiDecodeMap": "tsx ./scripts/generate_IBMKanjiDecodeMap.ts",
    "generate:toFullwidth": "tsx ./scripts/generate_toFullwidth.ts",
    "generate:toFullwidthKatakana": "tsx ./scripts/generate_toFullwidthKatakana.ts",
    "generate:toHalfwidth": "tsx ./scripts/generate_toHalfwidth.ts",
    "generate:toHiragana": "tsx ./scripts/generate_toHiragana.ts",
    "generate:toZenginKana": "tsx ./scripts/generate_toZenginKana.ts"
  },
  "engines": {
    "node": ">=18"
  },
  "type": "module",
  "sideEffects": false,
  "exports": {
    "./locale": {
      "require": "./cjs/locale/index.cjs",
      "default": "./lib/locale/index.js"
    },
    "./charset": {
      "require": "./cjs/charset/index.cjs",
      "default": "./lib/charset/index.js"
    },
    ".": {
      "require": "./cjs/index.cjs",
      "default": "./lib/index.js"
    },
    "./package.json": "./package.json"
  },
  "typesVersions": {
    "*": {
      "charset": ["./types/charset/index.d.ts"],
      "locale": ["./types/locale/index.d.ts"],
      "*": ["./types/index.d.ts"]
    }
  },
  "files": [
    "cjs/",
    "lib/",
    "types/",
    "src/",
    "LICENSE",
    "package.json",
    "README.md"
  ],
  "devDependencies": {
    "@babel/cli": "^7.22.9",
    "@babel/core": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-typescript": "^7.22.5",
    "@tsconfig/recommended": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "release-please": "^15.12.0",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6",
    "vitest": "^0.33.0"
  },
  "dependencies": {
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0"
  }
}
