{
  "name": "jtc-utils",
  "version": "0.2.0",
  "description": "Utilities for Japanese Traditional Companies",
  "type": "module",
  "main": "./lib/index.js",
  "module": "./module/index.js",
  "types": "./module/index.d.ts",
  "scripts": {
    "build": "tsc --build --clean && tsc -p ./tsconfig.json && tsc -p ./tsconfig.cjs.json",
    "test": "vitest --config vitest.config.ts",
    "lint": "eslint",
    "generate": "npm-run-all 'generate:*'",
    "generate:IBMKanjiDecodeMap": "node --loader ts-node/esm ./scripts/generate_IBMKanjiDecodeMap.ts",
    "generate:toHalfwidth": "node --loader ts-node/esm ./scripts/generate_toHalfwidth.ts",
    "generate:toFullwidth": "node --loader ts-node/esm ./scripts/generate_toFullwidth.ts",
    "generate:toHiragana": "node --loader ts-node/esm ./scripts/generate_toHiragana.ts",
    "generate:toKatakana": "node --loader ts-node/esm ./scripts/generate_toKatakana.ts",
    "generate:toZenginKana": "node --loader ts-node/esm ./scripts/generate_toZenginKana.ts"
  },
  "author": "Hidekatsu Izuno <hidekatsu.izuno@gmail.com> (https://github.com/hidekatsu-izuno/)",
  "license": "MIT",
  "sideEffects": false,
  "exports": {
    "./node": {
      "import": {
        "types": "./module/node/index.d.ts",
        "default": "./module/node/index.js"
      },
      "require": {
        "types": "./lib/node/index.d.ts",
        "default": "./lib/node/index.js"
      },
      "default": "./lib/node/index.js"
    },
    "./charset": {
      "import": {
        "types": "./module/charset/index.d.ts",
        "default": "./module/charset/index.js"
      },
      "require": {
        "types": "./lib/charset/index.d.ts",
        "default": "./lib/charset/index.js"
      },
      "default": "./lib/charset/index.js"
    },
    ".": {
      "import": {
        "types": "./module/index.d.ts",
        "default": "./module/index.js"
      },
      "require": {
        "types": "./lib/index.d.ts",
        "default": "./lib/index.js"
      },
      "default": "./lib/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "lib/",
    "module/",
    "src/",
    "LICENSE",
    "package.json",
    "README.md"
  ],
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "eslint": "^8.43.0",
    "release-please": "^15.11.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.5",
    "vitest": "^0.32.2"
  },
  "dependencies": {
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0"
  }
}
